@using HotelBookingSystemApp.ViewModels
@model ListingPageViewModel

@{ ViewData["Title"] = "Search Results"; }

@if (!Model.Rooms.Any())
{
    <p>Oops, no rooms match your filters.</p> }
else
{
<div class="container" style="margin-top:5px;">
    <div class="row">
        <div class="col-sm-4">
            <partial name="_ListingSearchForm" model="Model.Filters" />
        </div>
        <div class="col-sm-8">
            <div class="alert alert-warning" style="background-color: #E55B13; margin-bottom: -10px; color: white;">Search Results</div>

            @foreach (var room in Model.Rooms)
            {
                <p style="position: relative; left: 193px; top: 20px;"> @room.Name</p>
                <p style="position: relative; left: 193px; margin-bottom: 15px; margin-top: 15px; "> @room.City</p>

                <p><img src="~/images/@room.Photo" alt="Hotel Image" style="position: relative; bottom: 50px; width: 165px; height: 120px;"></p>
                <div class="main-form">
                    <div class="verticalLine"></div>
                    <div style="position: relative; margin-left: 150px; left: 20px; bottom: 160px; padding: 25px;">@room.ShortDescription</div>

                </div>
                <div class="text-right">
                    <a asp-controller="Room" asp-action="Detail" asp-route-id="@room.RoomId" asp-route-checkindate="@Model.Filters.CheckInDate" asp-route-checkoutdate="@Model.Filters.CheckOutDate">
                        <input class="btn" style="background-color: #E55B13; margin-top: -10px; color: white; " type="submit"
                               value="Go to Page Room">
                    </a>
                </div>
                <div style="width: 165px;margin-bottom:-55px;">
                    <p style="background-color: #989898; color: white; position: relative; text-align: center; bottom: 5px;">Per Night:&#128;@room.Price</p>
                    <p style="background-color: #D3D3D3; color: white; position: relative; left: 180px; bottom: 45px; width: 530px; text-align:center; ">Type of Room: @room.RoomType.RoomType1</p>
                </div>
              }
        </div>
    </div>
</div>              
}


